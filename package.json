		"test": "bun test",
		"type": "tsc --noEmit"
	},
	"dependencies": {
		"deepl-node": "^1.13.0",
		"mrdamian": "^0.0.3"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.1",
		"@types/bun": "^1.1.4",
		"@types/node": "^20.14.4",
		"bun": "^1.1.13",
		"npm-run-all2": "^6.2.0",
		"typescript": "^5.4.5"
	}
