{
	"name": "mrdamian-plugin-deepl",
	"productName": "mrdamian-plugin-deepl",
	"description": "Mr.Damian plugin for translate text with DeepL",
	"homepage": "https://github.com/yuniruyuni/mrdamian-plugin-deepl/README.md",
	"repository": "https://github.com/yuniruyuni/mrdamian-plugin-deepl",
	"bugs": "https://github.com/yuniruyuni/mrdamian-plugin-deepl/issues",
	"version": "0.0.4",
	"author": {
		"name": "yuniruyuni",
		"email": "yuniruyuni@gmail.com"
	},
	"files": ["index.ts", "tsconfig.json", "dist"],
	"keywords": ["mrdamian"],
	"license": "MIT",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"build": "run-s build:backend",
